name = 'NAMD'
version = '2.12'
versionsuffix = '-multicore'

homepage = 'http://www.ks.uiuc.edu/Research/namd/'
description = """NAMD is a parallel molecular dynamics code designed for high-performance simulation of
 large biomolecular systems."""

toolchain = {'name': 'iimklc', 'version': '2016.4.90'}

toolchainopts = {'opt': True, 'pic': True,'cstd': 'c++11', 'extra_cflags': 'ip'}

sources = ['NAMD_%(version)s_Source.tar.gz']

dependencies = [
    ('FFTW', '3.3.6'),
]

# 30;32;35;37;50;52;53;60;61;62;70
configopts = "--cuda-gencode arch=compute_30,code=sm_30 "
configopts += "--cuda-gencode arch=compute_32,code=sm_32 "
configopts += "--cuda-gencode arch=compute_35,code=sm_35 "
configopts += "--cuda-gencode arch=compute_37,code=sm_37 "
configopts += "--cuda-gencode arch=compute_50,code=sm_50 "
configopts += "--cuda-gencode arch=compute_52,code=sm_52 "
configopts += "--cuda-gencode arch=compute_53,code=sm_53 "
configopts += "--cuda-gencode arch=compute_60,code=sm_60 "
configopts += "--cuda-gencode arch=compute_61,code=sm_61 "
configopts += "--cuda-gencode arch=compute_62,code=sm_62 "
configopts += "--cuda-gencode arch=compute_70,code=sm_70 "

# /bin/csh is required by 'config' script
osdependencies = ['tcsh']
buildopts="TCLLIB='-ltcl8.6'"
charm_arch = "multicore-linux64"
runtest=False
moduleclass = 'chem'
modaltsoftname = "namd-multicore"

modluafooter = """
family("namd")
"""
