easyblock = 'CMakeMake'
name = 'NTPoly'
version = '2.2'

homepage = 'https://william-dawson.github.io/NTPoly/'
description = """NTPoly is a massively parallel library for computing the functions of sparse, symmetric matrices based on polynomial expansions. """

toolchain = {'name': 'iomkl', 'version': '2018.3.312'}
toolchainopts = {'usempi': True}

source_urls = ['https://github.com/william-dawson/NTPoly/archive/']
sources = ['%(namelower)s-v%(version)s.tar.gz']
separate_build_dir = True

local_configopts_single = '-DCMAKE_CXX_COMPILER="mpicxx" '
local_configopts_single += '-DCMAKE_C_COMPILER="mpicc" '
local_configopts_single += '-DCMAKE_EXPORT_COMPILE_COMMANDS="mpifort" '
local_configopts_single += '-DCMAKE_BUILD_TYPE=Release '
local_configopts_single += '-DCMAKE_Fortran_FLAGS_RELEASE="-O3  -fPIC" '
local_configopts_single += '-DCMAKE_C_FLAGS_RELEASE="-O3 -DNDEBUG -fPIC" '
local_configopts_single += '-DCMAKE_CXX_FLAGS_RELEASE="-O3 -DNDEBUG -fPIC" '

configopts = [ local_configopts_single ]

builddependencies = [
	('Python', '2.7.14'),
]

postinstallcmds = [
    'ln -s %(installdir)s/lib64 %(installdir)s/lib',
]

sanity_check_paths = {
    'files': ['lib/libNTPoly.a', 'lib/libNTPolyCPP.a', 'lib/libNTPolyWrapper.a'],
    'dirs': ['include'],
}

moduleclass = 'math'
