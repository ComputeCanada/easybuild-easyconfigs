easyblock = 'CMakeMake'

name = 'PSI4'
version = '1.4'

homepage = 'http://www.psicode.org/'
description = """PSI4 is an open-source suite of ab initio quantum chemistry programs designed for
 efficient, high-accuracy simulations of a variety of molecular properties. We can routinely perform
 computations with more than 2500 basis functions running serially or in parallel."""

# PSI4 is mainly threaded with OpenMP but the driver can use mpi4py.
toolchain = {'name': 'iomkl', 'version': '2020a'}

source_urls = ['https://github.com/psi4/psi4/archive/']
sources = ['v%(version)s.tar.gz']
checksums = ["83eb7799294f8d52d16a2e1c9f7698b2de30582e74d3a05f782c2f3e764dd607"]

# ASD
multi_deps = {'Python': ['3.7', '3.8', '3.9']}

builddependencies = [
    ("Eigen", "3.3.7"),
    ("Boost", "1.72.0"),
]

dependencies = [
    ('libxc', '5.1.3'),
    ('SciPy-Stack', '2021a'),
]

# Instead of building libxc, use our module
preconfigopts = "sed -i -e '1 s/5.1.2/5.1.3/' %(builddir)s/%(namelower)s-%(version)s/external/upstream/libxc/CMakeLists.txt && "

configopts = " ".join([
    '-DPYMOD_INSTALL_LIBDIR=/python%(pyshortver)s/site-packages', # Location within CMAKE_INSTALL_LIBDIR (lib)
    '-DENABLE_XHOST=OFF',
])

separate_build_dir = True

"""
With pytest-xdiff manually run:
    pytest $EBROOTPSI4/lib/python3.8/site-packages/psi4/tests/ -n 8
for a full run of tests
"""

exts_defaultclass = 'PythonPackage'
exts_default_options = {'source_urls': [PYPI_SOURCE]}
exts_list = [
    ('pydantic', '1.8.2', {
        'checksums': ['26464e57ccaafe72b7ad156fdaa4e9b9ef051f69e175dbbb463283000c05ab7b'],
        'use_pip': True,
    }),
    ('Pint', '0.17', {
        'checksums': ['f4d0caa713239e6847a7c6eefe2427358566451fe56497d533f21fb590a3f313'],
        'use_pip': True,
    }),
]
exts_filter = ("python -c 'import %(ext_name)s'", '')

sanity_check_paths = {
    'files': [
        'bin/psi4',
    ],
    'dirs': [
        'bin',
        'include/psi4',
        'lib/python%(pyshortver)s/site-packages',
    ]
}

sanity_check_commands = [
    "python -c 'import psi4'"
]

modextrapaths = {
    'EBPYTHONPREFIXES': '',
}

moduleclass = 'chem'
