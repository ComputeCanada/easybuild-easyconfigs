easyblock = 'Nix'

name = 'Perl'
version = '5.22.2'
versionsuffix = '-nix'
perlshortver = '.'.join(version.split('.')[:1])

homepage = 'https://www.perl.org/'
description = "Perl 5 is a highly capable, feature-rich programming language with over 29 years of development."

toolchain = {'name': 'dummy', 'version': 'dummy'}

nix_profile = '/cvmfs/soft.computecanada.ca/nix/var/nix/profiles/perl-%(version)s'
nix_attribute = 'perl522 perlPackages.DBDSQLite perlPackages.DBI perlPackages.ExporterTiny perlPackages.HTMLParser perlPackages.HTMLTagset perlPackages.ListMoreUtils perlPackages.LocaleGettext perlPackages.WWWCurl perlPackages.XMLParser perlPackages.URI perlPackages.ModuleBuild'

modextrapaths = {'PERL5LIB': ['lib/perl%s' % perlshortver, 'lib/perl%s/site_perl' % perlshortver ]}

moduleclass = 'lang'

