easyblock = "Toolchain"

name = 'gmpich'
version = '2019.05'

homepage = '(none)'
description = """gcc and GFortran based compiler toolchain,
 including MPICH for MPI support."""

toolchain = SYSTEM

compname = 'GCC'
local_compver = '7.3.0'
comp = (compname, local_compver)

# compiler toolchain dependencies
dependencies = [
    comp,
    ('MPICH', '3.2.1', '', comp),
]

moduleclass = 'toolchain'
