# Using only with ABINIT 8.x
# patched version of Wannier90 2.0.1

easyblock = 'ConfigureMake'

name = 'Wannier90'
version = '2.0.1.1'

homepage = 'http://www.wannier.org'
description = """A tool for obtaining maximally-localised Wannier functions"""

toolchain = {'name': 'intel', 'version': '2018b'}
toolchainopts = {'usempi': True}

sources = [SOURCELOWER_TAR_GZ]
source_urls = ['http://forge.abinit.org/fallbacks']

configopts = ' --with-linalg-libs="-L$EBROOTIMKL/lib/intel64 -Wl,--start-group  -lmkl_intel_lp64 -lmkl_sequential -lmkl_core -Wl,--end-group -lpthread -lm -ldl" '

files_to_copy = [(['wannier90.x', 'postw90.x'], 'bin'), (['libwannier90.a'], 'lib')]

sanity_check_paths = {
    'files': ['bin/wannier90.x', 'bin/postw90.x', 'lib/libwannier90.a'],
    'dirs': []
}

moduleclass = 'chem'
