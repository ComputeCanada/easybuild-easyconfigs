# This file is an EasyBuild reciPY as per https://github.com/easybuilders/easybuild
easyblock = 'CMakeMake'

name = 'bpp-phyl-omics'
version = '2020.11'

homepage = 'https://github.com/BioPP/bpp-phyl-omics'
description = """Bio++ Phylogenetic Omics Library"""

toolchain = {'name': 'iccifort', 'version': '2018.3'}

source_urls = ['http://biopp.univ-montp2.fr/repos/sources']

sources = ['%(namelower)s-%(version)s.tar.gz']
checksums = ['71159d88a67a220b4b46d7c4ac507046e5f182379331fd8a6a131a83d4071f29']


dependencies = [
    ('bpp-core', '2020.11'),
    ('bpp-seq', '2020.11'),
    ('bpp-seq-omics', '2020.11'),    
    ('bpp-phyl', '2020.11'),
]

configopts = '-Dbpp-core_DIR=${EBROOTBPPMINCORE}/lib64/cmake/bpp-core/ '
configopts += '-Dbpp-seq_DIR=${EBROOTBPPMINSEQ}/lib64/cmake/bpp-seq/ '
configopts += '-Dbpp-seq-omics_DIR=${EBROOTBPPMINSEQOMICS}/lib64/cmake/bpp-seq-omics/ '
configopts += '-Dbpp-phyl_DIR=${EBROOTBPPMINPHYL}/lib64/cmake/bpp-phyl/ '

sanity_check_paths = {
    'files': ['lib64/libbpp-phyl-omics.a', 'lib64/libbpp-phyl-omics.%s' % SHLIB_EXT],
    'dirs': ['include/Bpp']
}

moduleclass = 'bio'
