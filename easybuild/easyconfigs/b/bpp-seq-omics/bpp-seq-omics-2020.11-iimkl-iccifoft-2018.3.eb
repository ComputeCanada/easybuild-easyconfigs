# This file is an EasyBuild reciPY as per https://github.com/easybuilders/easybuild
easyblock = 'CMakeMake'

name = 'bpp-seq-omics'
version = '2020.11'

homepage = 'https://github.com/BioPP/bpp-phyl'
description = """Bio++ Sequence Omics Library"""

toolchain = {'name': 'iccifort', 'version': '2018.3'}

source_urls = ['http://biopp.univ-montp2.fr/repos/sources']

sources = ['%(namelower)s-%(version)s.tar.gz']
checksums = ['bc22dfb75a57dfc6d1cb225ecf9b529ef3a0598a21e8140f6a2e80e4053635b5']

dependencies = [('bpp-core', '2020.11') , ('bpp-seq', '2020.11')]
configopts = ' -Dbpp-core_DIR=${EBROOTBPPMINCORE}/lib64/cmake/bpp-core/ '
configopts += ' -Dbpp-seq_DIR=${EBROOTBPPMINSEQ}/lib64/cmake/bpp-seq/ '

sanity_check_paths = {
    'files': ['lib64/libbpp-seq-omics.a', 'lib64/libbpp-seq-omics.%s' % SHLIB_EXT],
    'dirs': ['include/Bpp']
}

moduleclass = 'bio'
