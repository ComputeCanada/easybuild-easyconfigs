name = 'GROMACS'
version = '4.6.7'

homepage = 'http://www.gromacs.org'
description = """GROMACS is a versatile package to perform molecular dynamics.
 i.e. simulating the Newtonian equations of motion for systems with hundreds to millions of particles.
- CC-Wiki: GROMACS"""

toolchain = {'name': 'gomklc', 'version': '2016.4.11.8'}
toolchainopts = {'openmp': True, 'usempi': True}

source_urls = ['ftp://ftp.gromacs.org/pub/gromacs/']
sources = [SOURCELOWER_TAR_GZ]
checksums = ['6afb1837e363192043de34b188ca3cf83db6bd189601f2001a1fc5b0b2a214d9']

builddependencies = []

#configopts = "-DGMX_THREAD_MPI=OFF" 
cuda_compute_capabilities='6.0,7.0,7.5,8.0'
double_precision = False

moduleclass = 'chem'
