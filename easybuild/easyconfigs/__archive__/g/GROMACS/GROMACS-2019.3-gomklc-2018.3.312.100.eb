name = 'GROMACS'
version = '2019.3'

homepage = 'http://www.gromacs.org'
description = """GROMACS is a versatile package to perform molecular dynamics.
 i.e. simulating the Newtonian equations of motion for systems with hundreds to millions of particles.
- CC-Wiki: GROMACS"""

toolchain = {'name': 'gomklc', 'version': '2018.3.312.100'}
toolchainopts = {'openmp': True, 'usempi': True}

source_urls = ['ftp://ftp.gromacs.org/pub/gromacs/']
sources = [SOURCELOWER_TAR_GZ]

patches = [
    'GROMACS-2019_fix_omp_num_threads_and_google_test_death_style_in_tests.patch',
    'GROMACS-2019_increase_test_timeout_for_GPU.patch',
]

builddependencies = [
    ('Boost', '1.68.0'),
]

configopts = [
    " -DGMX_USE_NVML=ON -DGMX_THREAD_MPI=OFF -DGMX_DOUBLE=OFF" ,
]

moduleclass = 'chem'
