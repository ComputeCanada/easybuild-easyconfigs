]

dependencies = [
    ('libreadline', '7.0'),
    ('ncurses', '6.1'),
    # OpenFOAM requires 64 bit METIS using 32 bit indexes (array indexes)
    ('METIS', '5.1.0'),
    ('SCOTCH', '6.0.6'),
]

builddependencies = [
    ('Bison', '3.0.5'),
    ('CMake', '3.11.4'),
    ('flex', '2.6.4'),
    ('CGAL', '4.9'),
]

moduleclass = 'cae'
modluafooter = """
local wm_compiler = "Gcc"
local scotch_version = "6.0.6"
local wm_label_size = "32"
local api = "1802"
local wm_cc = "gcc"
