setenv("BOOST_ARCH_PATH", "")
setenv("CGAL_ARCH_PATH", "")
setenv("FFTW_ARCH_PATH","")
setenv("MESA_ARCH_PATH","")
setenv("SCOTCH_ARCH_PATH","")
