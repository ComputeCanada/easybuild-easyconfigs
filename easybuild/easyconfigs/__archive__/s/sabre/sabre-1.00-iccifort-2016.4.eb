easyblock = 'MakeCp'

name = 'sabre'
version = '1.00'

homepage = 'https://github.com/najoshi/sabre'
description = """ A barcode demultiplexing and trimming tool for FastQ files """

toolchain = {'name': 'iccifort', 'version': '2016.4'}

source_urls = ['https://github.com/najoshi/sabre/archive/']
sources = ['master.zip']



files_to_copy = [
    (["sabre"], "bin"),
]

sanity_check_paths = {
    'files': ["bin/sabre"],
    'dirs': [""],
}

moduleclass = 'bio'
