easyblock = 'MakeCp'

name = 'FragGeneScan'
version = '1.30'

homepage = 'http://omics.informatics.indiana.edu/FragGeneScan/'
description = "FragGeneScan is an application for finding (fragmented) genes in short reads."

toolchain = {'name': 'iccifort', 'version': '2016.4'}

source_urls = [SOURCEFORGE_SOURCE]
sources = ['%(name)s%(version)s.tar.gz']

buildopts = 'CC="$CC" CFLAG="$CFLAGS" fgs && chmod -R go+rx *.pl train example'

files_to_copy = ['FragGeneScan', 'run_FragGeneScan.pl', 'README', 'example', 'train']

postinstallcmds = ["sed -i 's/#!\/usr\/bin\/perl/#!\/usr\/bin\/env perl/g' %(installdir)s/*.pl"]

modextrapaths = {
    'PATH': [''],
    'PATH': ['train'],
}

sanity_check_paths = {
    'files': ['FragGeneScan', 'run_FragGeneScan.pl'],
    'dirs': ['example', 'train'],
}

moduleclass = 'bio'
modluafooter = """
depends_on("perl")
"""
