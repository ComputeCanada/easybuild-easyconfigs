easyblock = 'ConfigureMake'

name = 'FFTW'
version = '3.3.6'
versionsuffix = '-serial'
modaltsoftname = 'fftw-serial'

homepage = 'http://www.fftw.org'
description = """FFTW is a C subroutine library for computing the discrete Fourier transform (DFT)
 in one or more dimensions, of arbitrary input size, and of both real and complex data."""

toolchain = {'name': 'iccifort', 'version': '2016.4.258'}
toolchainopts = {'pic': True}

sources = [SOURCELOWER_TAR_GZ]
source_urls = [homepage]

common_configopts = "--enable-threads --enable-openmp --with-pic"

# no quad precision, requires GCC v4.6 or higher
# see also http://www.fftw.org/doc/Extended-and-quadruple-precision-in-Fortran.html
configopts = [
    common_configopts + " --enable-single --enable-sse2 --enable-avx --enable-avx2 ",
    common_configopts + " --enable-long-double ",
    common_configopts + " --enable-sse2 --enable-avx --enable-avx2 ",  # default as last
]

sanity_check_paths = {
    'files': ['bin/fftw%s' % x for x in ['-wisdom', '-wisdom-to-conf', 'f-wisdom', 'l-wisdom']] +
             ['include/fftw3%s' % x for x in ['.f', '.f03',
                                              '.h', 'l.f03', 'q.f03']] +
             ['lib/libfftw3%s%s.a' % (x, y) for x in ['', 'f', 'l'] for y in ['', '_omp', '_threads']],
    'dirs': ['lib/pkgconfig'],
}

moduleclass = 'numlib'
