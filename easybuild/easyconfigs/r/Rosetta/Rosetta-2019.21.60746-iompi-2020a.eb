# parallel = 1

builddependencies = [
    ('Python', '2.7'),
]

fix_perl_shebang_for = [
    'tools/*/*.pl',
    'demos/**/*.pl',
]

#builddependencies = [('SCons', '2.5.0', '-Python-2.7.12')]

moduleclass = 'bio'
