easyblock = 'Tarball'

name = 'RepeatMasker'
version = '4-0-7'

homepage = 'http://www.repeatmasker.org/'
description = """RepeatMasker is a program that screens DNA sequences for interspersed repeats and low complexity DNA sequences. """

toolchain = {'name': 'GCC', 'version': '5.4.0'}

source_urls = ['http://www.repeatmasker.org/']
sources = [
    '%(name)s-open-%(version)s.tar.gz',
]

dependencies = [
               ('TRF', '4.09', '-linux64'),
               ('HMMER', '3.1b2'),
               ('Perl', '5.22.4'),
]

sanity_check_paths = {
    'files': ['RepeatMasker', 'configure'],
    'dirs': ['Libraries'],
}

postinstallcmds = [' cd %(installdir)s && printf "\n%s\n\n\n%s\n%s\n\n%s\n" "env" "4" "$EBROOTHMMER/bin" "5" |perl configure ']

modextrapaths = {
    'PATH': '',
}

moduleclass = 'bio'
