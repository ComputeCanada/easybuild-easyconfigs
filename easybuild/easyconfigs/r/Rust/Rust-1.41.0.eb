easyblock = 'ConfigureMake'

name = 'Rust'
version = '1.41.0'

homepage = 'https://www.rust-lang.org'
description = """Rust is a systems programming language that runs blazingly fast, prevents segfaults,
 and guarantees thread safety."""

toolchain = SYSTEM

source_urls = ['https://static.%(namelower)s-lang.org/dist/']
sources = ['rustc-%(version)s-src.tar.gz']
checksums = ['5546822c09944c4d847968e9b7b3d0e299f143f307c00fa40e84a99fabf8d74b']

builddependencies = [
    ('binutils', '2.28'),
    ('CMake', '3.10.0'),
]

configopts = "--enable-extended --sysconfdir=%(installdir)s/etc"

sanity_check_paths = {
    'files': ['bin/cargo', 'bin/rustc', 'bin/rustdoc'],
    'dirs': ['lib/rustlib', 'share/doc', 'share/man'],
}

moduleclass = 'lang'
