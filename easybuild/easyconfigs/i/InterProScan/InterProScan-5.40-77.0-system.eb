easyblock = 'Tarball'

name = 'InterProScan'
version = '5.40-77.0'

homepage = 'http://www.ebi.ac.uk/interpro/'
description = """InterProScan is a sequence analysis application (nucleotide and protein sequences) that combines
 different protein signature recognition methods into one resource."""


toolchain = SYSTEM
sources = ['%(namelower)s-%(version)s-64-bit.tar.gz']
source_urls = [
    'http://ftp.ebi.ac.uk/pub/software/unix/iprscan/%(version_major)s/%(version)s/',
]

checksums = ['62eef3b024e8e6a538333721992b7c92']

dependencies = [
    ('Java', '13.0.1',),
    ('Python', '3.7.4',),
    ('Perl', '5.22.4'),
    ('panther', '14.1'),

]

modextrapaths = {'PATH': '.'}
postinstallcmds = ['cd %(installdir)s && sed -i \'s@\'"^panther.models.dir.*"\'@\'"panther.models.dir=${EBROOTPANTHER}"\'@\' interproscan.properties && sed -i \'s@\'"^panther.hmm.path.*"\'@\'"panther.hmm.path=${EBROOTPANTHER}/panther.hmm"\'@\' interproscan.properties && sed -i \'s@\'"^panther.names.tab.*"\'@\'"panther.names.tab=${EBROOTPANTHER}/names.tab"\'@\' interproscan.properties && sed -i \'s@\'"^number.of.embedded.workers.*"\'@\'number.of.embedded.workers=1\'@\' interproscan.properties && sed -i \'s@\'"^maxnumber.of.embedded.workers.*"\'@\'maxnumber.of.embedded.workers=1\'@\' interproscan.properties  ']
sanity_check_paths = {
    'files': ['%(namelower)s-%(version_major)s.jar', '%(namelower)s.sh', '%(namelower)s.properties'],
    'dirs': ['bin', 'lib', 'data'],
}

moduleclass = 'bio'
