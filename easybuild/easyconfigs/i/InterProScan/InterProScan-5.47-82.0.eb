easyblock = 'Tarball'

name = 'InterProScan'
version = '5.47-82.0'

homepage = 'http://www.ebi.ac.uk/interpro/'
description = """
InterProScan is a sequence analysis application (nucleotide and protein 
sequences) that combines different protein signature recognition methods 
into one resource."""


toolchain = SYSTEM
source_urls = ['ftp://ftp.ebi.ac.uk/pub/software/unix/iprscan/5/%(version)s',
]
sources = ['%(namelower)s-%(version)s-64-bit.tar.gz']
checksums = ['8e16452b37fe6db51808445212dcf33ded8674fdb6a12ae3a8efc13dc9578618']

dependencies = [
    ('Java', '13.0.2',),
    ('Python', '3.7'),
    ('Perl', '5.30.2'),
    ('panther', '14.1'),

]

modextrapaths = {'PATH': '.'}
postinstallcmds = ['cd %(installdir)s && sed -i \'s@\'"^panther.models.dir.*"\'@\'"panther.models.dir=${EBROOTPANTHER}"\'@\' interproscan.properties && sed -i \'s@\'"^panther.hmm.path.*"\'@\'"panther.hmm.path=${EBROOTPANTHER}/panther.hmm"\'@\' interproscan.properties && sed -i \'s@\'"^panther.names.tab.*"\'@\'"panther.names.tab=${EBROOTPANTHER}/names.tab"\'@\' interproscan.properties ']
sanity_check_paths = {
    'files': ['%(namelower)s-%(version_major)s.jar', '%(namelower)s.sh', '%(namelower)s.properties'],
    'dirs': ['bin', 'lib', 'data'],
}

moduleclass = 'bio'
