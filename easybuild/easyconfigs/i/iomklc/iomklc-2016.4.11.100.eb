easyblock = "Toolchain"

name = 'iomklc'
version = '2016.4.11.100'

homepage = 'http://software.intel.com/en-us/intel-cluster-toolkit-compiler/'
description = """Intel Cluster Toolchain Compiler Edition provides Intel C/C++ and Fortran compilers, Intel MKL, CUDA & OpenMPI."""

toolchain = SYSTEM

local_compver = '2016.4.258'
local_iccifortver = '2016.4'
comp = ('iccifort', local_iccifortver)
iccifortcudaver = '2016.4.100'

# specify subtoolchains as builddependencies
# this way they will be considered as subtoolchains but
# are not loaded in the modulefile or software compiled
# with this toolchain
builddependencies = [
    ('iccifortcuda', iccifortcudaver),
    ('iimkl', local_iccifortver),
    ('iimklc', iccifortcudaver),
    ('iompic', version),
]

# iccifort needs to be a dependency since it needs to
# be loaded explicitly when iomkl is loaded
dependencies = [
    ('icc', local_compver),
    ('ifort', local_compver),
    ('iccifort', local_iccifortver),
    ('CUDA', '10.0.130', '', comp),
    ('OpenMPI', '2.1.1', '', ('iccifortcuda', iccifortcudaver)),
    ('imkl', '11.3.4.258'),
]

hidden = True

moduleclass = 'toolchain'
