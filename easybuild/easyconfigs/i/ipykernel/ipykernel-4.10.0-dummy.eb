easyblock = 'PythonPackage'

name = 'ipykernel'
version = '4.10.0'
hidden = True

homepage = 'https://ipython.org/'
description = """Bundle which contains ipykernel %(version)s and its dependencies"""

toolchain = {'name': 'dummy', 'version': ''}
multi_deps = {
