easyblock = 'Bundle'

name = 'ipython-kernel'
version = '2.7.14'

homepage = 'https://ipython.org/'

description = """IPython kernelspec for Python %(version)s"""

toolchain = {'name': 'dummy', 'version': 'dummy'}

# this is a bundle of Python packages
exts_defaultclass = 'PythonPackage'

postinstallcmds = [
    'module load python/%(version)s ipykernel/.4.10.0 && ' +
    'python -m ipykernel install --name "python%(version_major)s" --prefix=%(installdir)s --display-name "Python %(version_major)s"',
]

modextrapaths = {'JUPYTER_PATH': ['']}

modluafooter = """
depends_on("ipykernel/.4.10.0")
depends_on("python/%(version)s")
"""